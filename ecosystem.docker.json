{
  "apps": [{
    "name": "lobubble-bot",
    "script": "dist/index.js",
    "instances": 1,
    "autorestart": true,
    "max_restarts": 50,
    "restart_delay": 3000,
    "max_memory_restart": "1G",
    "exp_backoff_restart_delay": 100,
    "watch": false,
    "merge_logs": true,
    "error_file": "/app/logs/error.log",
    "out_file": "/app/logs/output.log",
    "log_date_format": "YYYY-MM-DD HH:mm:ss Z"
  }],
  "daemon_mode": true,
  "no_daemon": false
} 